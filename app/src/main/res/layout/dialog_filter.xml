<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/material_grey_300"
    android:orientation="vertical"
    android:layout_marginLeft="90dp"
    android:layout_marginRight="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="20dp"
    android:paddingTop="10dp">

    <ysdesigns.moneytrackerapp.Font.RobotoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:text="Transaction Type Filter"
        android:textColor="@color/material_grey_900"
        android:textSize="16sp"
        app:typeface="robotoLight" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="8dp"
        android:background="@color/material_grey_900" />

    <ysdesigns.moneytrackerapp.Views.MaterialRippleLayout
        style="@style/RippleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:rippleColor="@color/material_grey_600">

        <CheckBox
            android:id="@+id/typeExpense"
            style="@style/CheckBoxStyle.Light"
            android:layout_width="match_parent"
            android:padding="16dp"
            android:text="Expense" />
    </ysdesigns.moneytrackerapp.Views.MaterialRippleLayout>

    <ysdesigns.moneytrackerapp.Views.MaterialRippleLayout
        style="@style/RippleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:rippleColor="@color/material_grey_600">

        <CheckBox
            android:id="@+id/typeIncome"
            style="@style/CheckBoxStyle.Light"
            android:layout_width="match_parent"
            android:padding="16dp"
            android:text="Income" />
    </ysdesigns.moneytrackerapp.Views.MaterialRippleLayout>

    <ysdesigns.moneytrackerapp.Font.RobotoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:text="Transaction Period Filter"
        android:textColor="@color/material_grey_900"
        android:textSize="16sp"
        app:typeface="robotoLight" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="8dp"
        android:background="@color/material_grey_900" />

    <ysdesigns.moneytrackerapp.Views.MaterialRippleLayout
        style="@style/RippleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:rippleColor="@color/material_grey_600">

        <RadioButton
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:text="30 Days"/>

    </ysdesigns.moneytrackerapp.Views.MaterialRippleLayout>

    <ysdesigns.moneytrackerapp.Views.MaterialRippleLayout
        style="@style/RippleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:rippleColor="@color/material_grey_600">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="90 Days"/>

    </ysdesigns.moneytrackerapp.Views.MaterialRippleLayout>

    <ysdesigns.moneytrackerapp.Views.MaterialRippleLayout
        style="@style/RippleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:rippleColor="@color/material_grey_600">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="180 Days"/>

    </ysdesigns.moneytrackerapp.Views.MaterialRippleLayout>

    <ysdesigns.moneytrackerapp.Views.MaterialRippleLayout
        style="@style/RippleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:rippleColor="@color/material_grey_600">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="365 Days"/>

    </ysdesigns.moneytrackerapp.Views.MaterialRippleLayout>

</LinearLayout>