<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/card_background_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/list_item_google_cards_social_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:contentDescription="@string/cd_main_image"
        android:src="@drawable/expandable_travel_background_image"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="right"
        android:orientation="vertical"
        android:background="@drawable/google_cards_background_bottom"  >

        <com.hackathonproject.Font.RobotoTextView
            android:id="@+id/list_item_google_cards_social_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:maxLines="2"
            android:text="@string/lorem_ipsum_long"
            android:textColor="@color/material_blue_grey_700"
            android:textSize="14sp"
            app:typeface="robotoRegular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_color_500" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <com.hackathonproject.Font.RobotoTextView
                android:id="@+id/list_item_google_cards_social_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/transparent_button_selector"
                android:padding="8dp"
                android:text="LIKE"
                android:textColor="@color/main_color_500"
                android:textSize="14sp"
                app:typeface="robotoMedium" />

            <com.hackathonproject.Font.RobotoTextView
                android:id="@+id/list_item_google_cards_social_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/transparent_button_selector"
                android:padding="8dp"
                android:text="FOLLOW"
                android:textColor="@color/main_color_500"
                android:textSize="14sp"
                app:typeface="robotoMedium" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>