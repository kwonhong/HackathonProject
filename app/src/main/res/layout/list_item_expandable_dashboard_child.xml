<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/childLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/material_grey_200" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal"
        android:background="@color/white" >

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_calendar"
            android:layout_centerVertical="true"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            app:civ_fill_color="#ff0000"/>

        <ysdesigns.moneytrackerapp.Font.RobotoTextView
            style="@style/TextViewAppearance.Body2"

            android:id="@+id/categoryTxtView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@+id/imageView"
            android:maxLines="1"
            android:gravity="center"
            android:text="PAY WITH PAYPAL"
            android:textColor="@color/main_color_grey_900"/>

        <ysdesigns.moneytrackerapp.Font.RobotoTextView
            android:id="@+id/transactionAmountTxtView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingRight="30dp"
            android:gravity="center"
            android:text="\u20A9 44,000"/>
    </RelativeLayout>



</LinearLayout>